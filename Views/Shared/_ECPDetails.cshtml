<!DOCTYPE html>

@{

    string id = (string)ViewContext.RouteData.Values["id"];
    string name = ViewData["Name"] as string;
    string entityIcon = ViewData["EntityIcon"] as string;
}
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <title>@ViewData["Title"]</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

    @Html.Partial("_ECPBasicStyles")

    @RenderSection("Styles", required: false)

</head>
<body class="hold-transition skin-blue fixed sidebar-mini">
    <div class="wrapper">
        @Html.Partial("_ECPMainHeader")
        <!-- Left side column. contains the logo and sidebar -->
        @Html.Partial("_ECPMainSidebar")
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    <i class="@entityIcon text-primary"></i> @name Details
                </h1>
            </section>
            <!-- Main content -->
            <section class="content">
                @RenderBody()
            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        @Html.Partial("_ECPFooter")

    </div>
    <!-- ./wrapper -->


    @Html.Partial("_ECPBasicScripts")

    @RenderSection("Scripts", required: false)

    

</body>
</html>
